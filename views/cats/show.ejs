<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <%- include ('../partials/head.ejs') %>
</head>

<body class="has-navbar-fixed-top has-spaced-navbar-fixed-top">
  <%- include ('../partials/nav.ejs') %>
  <h1 class="mt-5" id="index-page"><%=cats.name%></h1>
  <div class="page-wrapper">
    <div class="column">
      <img id="show" src="<%=cats.img%>">
    </div>
    <div class="column" id="show-text">
      <p id="show-text"><strong>Age: </strong> <%=cats.ageYears%> years + <%=cats.ageMonths%> months</p><br>
      <p id="show-text"><strong>About <%=cats.name%>: </strong><%=cats.description%></p>
      <!-- send an edit request -->
      <a class="showpage-controls" href="/cats/<%=cats.id%>/edit"><input class="button my-4" id="submit-button" type="submit" value="Edit"></a>
      <!-- send a delete request -->
      <form action="/cats/<%=cats.id%>?_method=delete" method="post">
        <input class="button my-4" id="submit-button" type="submit" value="Delete">
      </form>
    </div>
  </div>
  <%- include ('../partials/footer.ejs') %>
</body>

</html>
