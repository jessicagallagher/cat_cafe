<% if (method === "post") { %>
<div class="container special">
  <form action="/cats" method="post">
    <div class="field">
      <label class="label for-inputs">Name:</label>
      <div class="control mb-4">
        <input class="input" type="text" name="name" placeholder="Wiz Khatlifa">
      </div>
    </div>
    <div class="field">
      <label class="label for-inputs">Age (Years):</label>
      <div class="control mb-4">
        <input class="input" type="number" name="ageYears" placeholder="2">
      </div>
    </div>
    <div class="field">
      <label class="label for-inputs">Age (Months):</label>
      <div class="control mb-4">
        <input class="input" type="number" name="ageMonths" placeholder="5">
      </div>
    </div>
    <div class="field">
      <label class="label for-inputs">Description:</label>
      <div class="control mb-4">
        <textarea class="textarea my-2" name="description"
          placeholder="Wiz is the runt of a runt litter rescued from a backyard in Williamsburg--but don't let his pint size fool you! What he lacks in size, he makes up for in personality. Let's just say he's very chatty and opinionated... but he loves snuggles and pets on HIS terms. Wiz needs to be adopted into a  home with another confident cat his age."></textarea>
      </div>
    </div>
    <div class="field">
      <label class="label for-inputs">Glamour Shot:</label>
      <div class="control mb-4">
        <input class="input" type="url" name="img" placeholder="https://www.wiz.jpg">
      </div>
    </div>
    <div class="field is-horizontal">
      <div class="control mt-4 mb-5">
        <input class="input" id="submit-button" type="submit" name="Add New Cat">
      </div>
    </div>
  </form>
</div>
<% } else { %>
<div class="container special">
  <form action="/cats/<%=cats.id%>?_method=put" method="post">
    <!-- NOTE: the form is pre-populated with values from the server -->
    <div class="field">
      <label class="label for-inputs">Name:</label>
      <div class="control mb-4">
        <input class="input" type="text" name="name" value="<%=cats.name%>">
      </div>
    </div>
    <div class="field">
      <label class="label for-inputs">Age (Years):</label>
      <div class="control mb-4">
        <input class="input" type="number" name="ageYears" value="<%=cats.ageYears%>">
      </div>
    </div>
    <div class="field">
      <label class="label for-inputs">Age (Months):</label>
      <div class="control mb-4">
        <input class="input" type="number" name="ageMonths" value="<%=cats.ageMonths%>">
      </div>
    </div>
    <div class="field">
      <label class="label for-inputs">Description:</label>
      <div class="control mb-4">
        <textarea class="textarea my-2" name="description"><%=cats.description%></textarea>
      </div>
    </div>
    <div class="field">
      <label class="label for-inputs">Glamour Shot:</label>
      <div class="control mb-4">
        <input class="input" type="url" name="img" value="<%=cats.img%>">
      </div>
    </div>
    <div class="field is-horizontal">
      <div class="control mt-4 mb-5">
        <input class="input" id="submit-button" type="submit" value="Submit Changes">
      </div>
    </div>
  </form>
</div>
<% } %>
