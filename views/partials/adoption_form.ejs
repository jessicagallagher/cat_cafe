<div class="container special">
  <form action="/adopt" method="post">
    <div class="field">
      <label class="label for-inputs">First Name:</label>
      <div class="control mb-4">
        <input class="input" type="text" name="firstName">
      </div>
    </div>

    <div class="field">
      <label class="label for-inputs">Last Name:</label>
      <div class="control mb-4">
        <input class="input" type="text" name="lastName">
      </div>
    </div>

    <div class="field">
      <label class="label for-inputs">How old are you?</label>
      <div class="control mb-4">
        <div class="select">
          <select>
            <option name="age">under 18</option>
            <option name="age">18-25</option>
            <option name="age">26-55</option>
            <option name="age">over 55</option>
          </select>
        </div>
      </div>
    </div>

    <div class="field">
      <label class="label for-inputs">Email:</label>
      <div class="control mb-4">
        <input class="input" type="text" name="email">
      </div>
    </div>

    <div class="field is-horizontal">
      <div class="control mt-4 mb-5">
        <input class="input" id="submit-button" type="submit" name="Submit">
      </div>
    </div>
  </form>
</div>
