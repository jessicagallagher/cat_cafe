<% if (method === "post") { %>
<div class="container special">
  <form action="/users" method="post">
    <div class="field">
      <label class="label for-inputs">First Name:</label>
          <div class="control mb-4">
            <input class="input my-2" type="text" name="firstName">
          </div>
    </div>
    <div class="field">
      <label class="label for-inputs">Email:</label>
          <div class="control mb-4">
            <input class="input my-2" type="text" name="email">
          </div>
    </div>
    <div class="field">
      <label class="label for-inputs">User Name:</label>
          <div class="control mb-4">
            <input class="input my-2" type="text" name="username">
          </div>
    </div>
    <div class="field">
      <label class="label for-inputs">Password:</label>
          <div class="control mb-4">
            <input class="input my-2" type="password" name="password" id="password">
          </div>
    </div>
    <div class="field">
      <div class="field-body">
          <div class="control mb-4">
            <input class="mr-1" id="show-password" type="checkbox" onclick="showPassword()">
            <p class="for-inputs" id="show-password">Show Password</p>
          </div>
        </div>
      </div>
      <div class="field">
        <label class="label for-inputs">Who are you?</label>
        <div class="control mb-4">
          <div class="select">
            <select name="userType">
              <option value="Volunteer">Volunteer</option>
              <option value="Visitor">Visitor</option>
            </select>
          </div>
        </div>
      </div>
      <div class="field is-horizontal">
        <div class="control mt-4 mb-5">
          <input class="input" id="submit-button" type="submit" name="Submit">
        </div>
      </div>
  </form>
</div>
<% } else { %>
<div class="container special">
  <form action="/sessions" method="post">
    <div class="field">
      <label class="label for-inputs">User Name:</label>
          <div class="control mb-4">
            <input class="input my-2" type="text" name="username">
          </div>
    </div>
    <div class="field">
      <label class="label for-inputs">Password:</label>
          <div class="control mb-4">
            <input class="input my-2" type="password" name="password" id="password">
          </div>
    </div>
    <div class="field">
      <div class="field-body">
          <div class="control mb-4">
            <input class="mr-1" id="show-password" type="checkbox" onclick="showPassword()">
            <p class="for-inputs" id="show-password">Show Password</p>
          </div>
        </div>
      </div>
      <div class="field is-horizontal">
        <div class="control mt-4 mb-5">
          <input class="input" id="submit-button" type="submit" name="Submit">
        </div>
      </div>
  </form>
</div>
<% } %>
